<p id="notice"><%= notice %></p>

<h1>Listing Art Galleries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Art type</th>
      <th>Art</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @art_galleries.each do |art_gallery| %>
      <tr>
        <td><%= art_gallery.name %></td>
        <td><%= art_gallery.user_id %></td>
        <td><%= art_gallery.art_type_id %></td>
        <td><%= art_gallery.art_id %></td>
        <td><%= link_to 'Show', art_gallery %></td>
        <td><%= link_to 'Edit', edit_art_gallery_path(art_gallery) %></td>
        <td><%= link_to 'Destroy', art_gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

